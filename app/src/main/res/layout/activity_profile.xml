<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="30dp"
    tools:context=".Activity.User.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:elevation="5dp"
        android:src="@drawable/img_avatar_default" />

    <LinearLayout
        android:id="@+id/lnl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_avatar"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ubuntu_regular"
            android:paddingStart="20dp"
            android:text="Rou"
            android:textColor="#01265E"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#45424242" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnl_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnl_name"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ubuntu_regular"
            android:paddingStart="20dp"
            android:text="hienpvph18604@fpt.edu.vn"
            android:textColor="#01265E"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#45424242" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_btn_done"
        android:elevation="5dp"
        android:fontFamily="@font/ubuntu_regular"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:text="DONE"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>